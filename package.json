{
  "name": "cerulean",
  "version": "0.0.1",
  "scripts": {
    "watch": "clj -X:watch",
    "release": "shadow-cljs -A:dev release app && npm run styles-release",
    "styles-dev": "npx @tailwindcss/cli -i ./resources/main.css -o ./public/main.css --watch",
    "styles-release": "npx @tailwindcss/cli -m -i ./resources/main.css -o ./public/main.css",
    "docker-build": "nix run .#docker && docker load < result",
    "docker-build-dev": "nix build .#docker-dev && docker load < result",
    "nix-deps-lock": "nix run github:jlesquembre/clj-nix#deps-lock",
    "nix-npm-deps-lock": "nix run nixpkgs#prefetch-npm-deps package-lock.json > npm-deps.sha256",
    "test-static-site": "cd docs && python -m http.server",
    "uberjar": "clj -X:uberjar",
    "tests": "clj -M:kaocha"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.7",
    "autoprefixer": "^10.4.21",
    "highlight.js": "^11.11.1",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "shadow-cljs": "2.22.9",
    "tailwindcss": "^4.1.7"
  },
  "dependencies": {
    "@js-joda/core": "3.2.0",
    "@js-joda/locale_en-us": "3.1.1",
    "axios": "^1.7.7"
  }
}
